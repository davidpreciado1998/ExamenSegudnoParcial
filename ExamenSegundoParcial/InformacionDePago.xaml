<UserControl x:Class="ExamenSegundoParcial.InformacionDePago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamenSegundoParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White">
        <TextBlock FontSize="16" Margin="10,0,0,0">Numero de Tarjeta:</TextBlock>
        <TextBox Name="tbxNumeroDeTarjeta" Margin="10,0,10,10"></TextBox>
        <TextBlock FontSize="16" Margin="10,0,0,0">CVV:</TextBlock>
        <TextBox Name="tbxCVV" Margin="10,0,10,10"></TextBox>
        <TextBlock FontSize="16" Margin="10,0,0,0">Mes de expiracion:</TextBlock>
        <TextBox Name="tbxMesDeExpiracion" Margin="10,0,10,10"></TextBox>
        <TextBlock FontSize="16" Margin="10,0,0,0">Año de expiracion:</TextBlock>
        <TextBox Name="tbxAñoDeExpiracion" Margin="10,0,10,10"></TextBox>
    </StackPanel>
</UserControl>
